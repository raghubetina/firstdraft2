<% was_validated = project_table_scope.errors.any? %>

<% form_html_options = { novalidate: true, class: "mb-3" } %>

<%= form_for(project_table_scope, html: form_html_options) do |f| %>
  <div class="mb-3">
    <% name_class = "form-control" %>
    <% name_was_invalid = project_table_scope.errors.include?(:name) %>

    <% if was_validated %>
      <% if name_was_invalid %>
        <% name_class << " is-invalid" %>
      <% else %>
        <% name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :name %>

    <%= f.text_field :name, class: name_class, placeholder: "Enter name" %>
    <% if name_was_invalid %>
      <% project_table_scope.errors.full_messages_for(:name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="mb-3">
    <% table_class = "form-control" %>
    <% table_was_invalid = project_table_scope.errors.include?(:table) %>

    <% if was_validated %>
      <% if table_was_invalid %>
        <% table_class << " is-invalid" %>
      <% else %>
        <% table_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :table %>

    <%= f.text_field :table, class: table_class, placeholder: "Enter table" %>
    <% if table_was_invalid %>
      <% project_table_scope.errors.full_messages_for(:table).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <%= f.button class: "btn btn-outline-secondary w-100" %>
<% end %>
